user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 100M;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/json application/javascript application/xml+rss 
               application/x-javascript;

    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # DNS resolver for Docker container names
    resolver 127.0.0.11 valid=10s;

    # Upgrade connection support for WebSockets
    map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
    }

    # Include workspace-specific upstream configurations
    include /etc/nginx/conf.d/*.upstream.conf;

    # Default server for HTTP - reject unknown hosts
    server {
        listen 80 default_server;
        server_name _;
        return 400 "Bad Request: Invalid Host Header\n";
    }

    # Default server for HTTPS - reject unknown hosts
    server {
        listen 443 ssl default_server;
        http2 on;
        server_name _;

        ssl_certificate /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;

        return 400 "Bad Request: Invalid Host Header\n";
    }

    # HTTP server - redirect to HTTPS (workspaces)
    server {
        listen 80;
        server_name {{ domain }};
        
        # Allow Let's Encrypt challenges
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
        
        # Redirect all other HTTP to HTTPS
        location / {
            return 301 https://$server_name$request_uri;
        }
    }

    # HTTP server - redirect to HTTPS (docs)
    server {
        listen 80;
        server_name docs.{{ dns_zone }};
        
        # Allow Let's Encrypt challenges
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
        
        # Redirect all other HTTP to HTTPS
        location / {
            return 301 https://$server_name$request_uri;
        }
    }

    upstream workspace_workspaces_server {
        zone upstream_dynamic 64k;
        server workspaces-server:3000 resolve;
    }

    upstream docs_renew_service {
        zone upstream_dynamic 64k;
        server docs-renew:3001 resolve max_fails=0;
    }

    # HTTPS server - main application (workspaces)
    server {
        listen 443 ssl;
        http2 on;
        server_name {{ domain }};

        ssl_certificate /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;

        # Security headers
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;

        # Block search engine crawlers
        location = /robots.txt {
            add_header Content-Type text/plain;
            return 200 "User-agent: *\nDisallow: /\n";
        }

        # Include common auth configuration
        include /etc/nginx/conf.d/auth-common.conf;

        # Include workspace-specific location configurations
        include /etc/nginx/conf.d/*.location.conf;

        # Main application (fallback - must be last)
        location / {
            proxy_pass http://workspace_workspaces_server;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 86400;
            
            # Disable caching for HTML files
            proxy_no_cache $http_pragma $http_authorization;
            proxy_cache_bypass $http_pragma $http_authorization;
            add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0" always;
        }
    }

    # HTTPS server - documentation site
    server {
        listen 443 ssl;
        http2 on;
        server_name docs.{{ dns_zone }};

        ssl_certificate /etc/letsencrypt/live/docs.{{ dns_zone }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/docs.{{ dns_zone }}/privkey.pem;

        # Security headers
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;

        # Root directory for documentation
        root /var/docs/docusaurus;
        index index.html;

        # Block search engine crawlers
        location = /robots.txt {
            add_header Content-Type text/plain;
            return 200 "User-agent: *\nDisallow: /\n";
        }

        # Auth verification endpoint (internal only, called by auth_request)
        location = /auth/verify {
            internal;
            proxy_pass http://docs_renew_service/api/auth/verify;
            proxy_pass_request_body off;
            proxy_set_header Content-Length "";
            proxy_set_header X-Original-URI $request_uri;
            proxy_set_header Cookie $http_cookie;
        }

        # Auth login page
        location = /auth/login.html {
            proxy_pass http://docs_renew_service/login.html?returnTo=$request_uri;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Proxy auth endpoints to docs-renew service (for OAuth flow)
        location ~ ^/(auth(/github/callback)?|api/auth|auth/failed|health|login\.html) {
            proxy_pass http://docs_renew_service;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Cookie $http_cookie;
            proxy_read_timeout 300;
        }

        # Documentation renewal endpoint (requires authentication)
        location = /.renew {
            auth_request /auth/verify;
            error_page 401 = /auth/login.html;
            
            proxy_pass http://docs_renew_service/renew;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Cookie $http_cookie;
            proxy_read_timeout 300;
        }

        # Hide .git directory
        location ~ /\.git {
            return 404;
        }

        # Serve static documentation files (requires authentication)
        location / {
            auth_request /auth/verify;
            error_page 401 = /auth/login.html;
            
            try_files $uri $uri/ =404;
            
            # Enable caching for static assets
            location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
                expires 1y;
                add_header Cache-Control "public, immutable";
            }
        }
    }
}

